{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": "./src",
    "allowJs": true
  },
  "include": ["src/**/*"]
}
